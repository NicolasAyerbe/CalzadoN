<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Listar Catalogos</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
         <div class="col-8">
            <table class="table">
                <thead>
                    <tr class="table-active">
                        <th scope="col">Id Catalogo </th>
                        <th scope="col">Nombre de catalogo</th>
                    </tr>
                </thead>
             <tbody id="'tabla">

             </tbody>
            </table>
         </div>


         <div class="col-4">
            <form action="#" method="post">
                <div class="mb-3">
                    <label class="form">Id Catalogo</label>
                    <input type="number" id="codi" class="form-control" name="Codigo" placeholder="">
                </div>
                <div class="mb-3">
                    <label class="form">Nombre Catalogo</label>
                    <input type="text" id="nomb" class="form-control" name="Nombre" placeholder="">
                </div>
                <div>
                    <input type="button" class="btn btn-primary" value="Registrar" onclick="registrar_Catalogo()">
                    <input type="button" class="btn btn-primary" value="Listar" onclick="listar_Catalogos()">
                    
                </div>

            </form>
         </div>
        </div>
    </div>

    <script>
        function listar_Catalogos() {
            fetch('/listar_Catalogos',
            {method: 'get'
        }
        ).then(res=>res.json())
        .then(data=>{
            var tabla='';
            for (var i=0;i<data.length;i++)
            {
                tabla+='<tr><td>'+data[i].id_catalogo +'</td>';
                tabla+='<tr><td>'+data[i].nombre_cat +'</td></tr>';  
            }
            document.getElementById('tabla').innerHTML=tabla;
        });
        }

        
        function registrar_Catalogo(){
            var id=document.getElementById('').value;
            var nom=document.getElementById('').value;
            var datos= new URLSearchParams();
            datos.append('Codigo',id);
            datos.append('Nombre',nom);

            fetch('/registrar_Catalogo',
            {method:'post',
            body: datos
        })
        .then(res=>res.text())
        .then(data=>{
            alert(data);
        });
        }
    </script>
</body>
</html>