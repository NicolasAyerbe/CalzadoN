<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Listar Compras</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
         <div class="col-8">
            <table class="table">
                <thead>
                    <tr class="table-active">
                        <th scope="col">id Compra </th>
                        <th scope="col">fecha </th>
                        <th scope="col">Valor</th>
                        <th scope="col">Metodo</th>
                        <th scope="col">id envio </th>
                        <th scope="col">id Usuario</th>
                    </tr>
                </thead>
             <tbody id="'tabla">

             </tbody>
            </table>
         </div>


         <div class="col-4">
            <form action="#" method="post">
                <div class="mb-3">
                    <label class="form">Id compra</label>
                    <input type="number" id="codi" class="form-control" name="Codigo" placeholder="">
                </div>
                <div class="mb-3">
                    <label class="form">Fecha</label>
                    <input type="date" id="fec" class="form-control" name="Nombre" placeholder="">
                </div>
                <div class="mb-3">
                    <label class="form">Valor</label>
                    <input type="number" id="val" class="form-control" name="Nombre" placeholder="">
                </div>
                <div class="mb-3">
                    <label class="form">Metodo</label>
                    <select id="met" name="Nombre" >
                        <option value="">efectivo</option>
                        <option value="">tarjeta</option>
                        <option value="">trransaccion</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form">id usuario</label>
                    <input type="number" id="usu" class="form-control" name="Nombre" placeholder="">
                </div>
                <div class="mb-3">
                    <label class="form">id envio</label>
                    <input type="number" id="env" class="form-control" name="Nombre" placeholder="">
                </div>
                <div>
                    <input type="button" class="btn btn-primary" value="Registrar" onclick="registrar_Compra()">
                    <input type="button" class="btn btn-primary" value="Listar" onclick="listar_Compras()">
                    
                </div>

            </form>
         </div>
        </div>
    </div>

    <script>
        function listar_Compras() { 
            fetch('/listar_Compras',
            {method: 'get'
        }
        ).then(res=>res.json())
        .then(data=>{
            var tabla='';
            for (var i=0;i<data.length;i++)
            {
                tabla+='<tr><td>'+data[i].id_compra +'</td>';
                tabla+='<tr><td>'+data[i].fecha_com +'</td>';
                tabla+='<tr><td>'+data[i].valor_com+'</td>'; 
                tabla+='<tr><td>'+data[i].metodo_pago +'</td>';
                tabla+='<tr><td>'+data[i].fk_usuario +'</td>';
                tabla+='<tr><td>'+data[i].fk_envio +'</td></tr>';  
            }
            document.getElementById('tabla').innerHTML=tabla;
        });
        }

        
        function registrar_Compra(){
            var id=document.getElementById('').value;
            var nom=document.getElementById('').value;
            var datos= new URLSearchParams();
            datos.append('Codigo',id);
            datos.append('Nombre',nom);

            fetch('/registrar_Compra',
            {method:'post',
            body: datos
        })
        .then(res=>res.text())
        .then(data=>{
            alert(data);
        });
        }
    </script>
</body>
</html>